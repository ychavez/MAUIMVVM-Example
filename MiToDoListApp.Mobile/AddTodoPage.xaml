<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiToDoListApp.Mobile.AddTodoPage"
             xmlns:local="clr-namespace:MiToDoListApp.Mobile.Behaviors"
             xmlns:viewmodel="clr-namespace:MiToDoListApp.Mobile.ViewModels"
              xmlns:model="clr-namespace:MiToDoListApp.Domain.Entities;assembly=MiToDoListApp.Domain"
             Title="AddTodoPage">

    <RefreshView IsRefreshing="{Binding IsBusy}"
                 Command="{Binding LoadTasksCommand}"
                 Margin="10">

        <ScrollView>
            <StackLayout Spacing="15">

                <!-- Header y BotÃ³n de Agregar -->
                <HorizontalStackLayout HorizontalOptions="End">
                    <Button Text="âž• Nueva Tarea"
                            Command="{Binding AddTaskCommand}"
                            CornerRadius="20"
                            Padding="20,10"/>
                </HorizontalStackLayout>

                <!-- Lista de Tareas -->
                <CollectionView ItemsSource="{Binding Tasks}"
                                SelectionMode="Single"
                                SelectedItem="{Binding SelectedTask}"
                                SelectionChangedCommand="{Binding TaskSelectedCommand}"
                                EmptyView="No hay tareas pendientes ðŸŽ‰">

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:TaskItem">
                            <Frame CornerRadius="10"
                                   Padding="15"
                                   BackgroundColor="{AppThemeBinding Light=White, Dark=#2C2C2C}">

                                <Grid ColumnDefinitions="*, Auto"
                                      RowDefinitions="Auto, Auto">

                                    <!-- TÃ­tulo y Estado -->
                                    <Label Text="{Binding Title}"
                                           FontSize="Medium"
                                           Grid.Column="0"
                                           Grid.Row="0"/>

                                    <!-- Checkbox y Fecha -->
                                    <HorizontalStackLayout Grid.Column="1"
                                                           Grid.Row="0"
                                                           Spacing="10">
                                        <CheckBox IsChecked="{Binding IsCompleted}"
                                                  VerticalOptions="Center"
                                                  Color="RoyalBlue">
                                            <CheckBox.Behaviors>
                                            </CheckBox.Behaviors>
                                        </CheckBox>
                                    </HorizontalStackLayout>

                                    <!-- LÃ­nea decorativa -->
                                    <BoxView HeightRequest="1"
                                             BackgroundColor="#E0E0E0"
                                             Grid.ColumnSpan="2"
                                             Grid.Row="1"
                                             Margin="0,10"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Indicador de Carga -->
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                    IsVisible="{Binding IsBusy}"
                                    Color="RoyalBlue"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"/>
            </StackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>